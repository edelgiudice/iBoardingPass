            <Grid Margin="0,0,0,5">
                <TextBlock x:Name="tbData" Margin="10,10,10,0" TextWrapping="Wrap" Height="37.94" VerticalAlignment="Top" Text="-- /--/ ----" TextAlignment="Center" IsEnabled="False"/>
